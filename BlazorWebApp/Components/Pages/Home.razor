@page "/"
@inherits HomeBase


<PageTitle>Home</PageTitle>


<h3 class="mt-3">Employees List</h3>

 @if (Employees.results == null)
{
    <div class="spinner"></div>
    <div>There is an error from your request. See the error below.</div>
    <div class="text-danger mt-3">@Error.errorMessage</div>
}
else
{
    <div class="container">
        <div class="row">
            @foreach (var employee in Employees.results)
            {
                <div class="col-md-4">
                    <div class="card m-1">
                        <div class="card-header">
                            @employee.firstname @employee.lastName
                        </div>
                        <div class="card-footer text-center">
                            <a href="@($"employeedetails/{employee.id}")" class="btn btn-primary m-1">View</a>

                            <a href="#" class="btn btn-primary m-1">Edit</a>

                            <a href="#" class="btn btn-danger m-1">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

}